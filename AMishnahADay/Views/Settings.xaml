<telerik:RadWindow xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
									 xmlns:telerikNavigation="clr-namespace:Telerik.Windows.Controls.Navigation;assembly=Telerik.Windows.Controls.Navigation"
									 x:Class="AMishnahADay.Views.Settings"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:local="clr-namespace:AMishnahADay.Views"
									 xmlns:gh="clr-namespace:AMishnahADay.Helpers"
                   mc:Ignorable="d"
                   Header="A Mishnah A Day - Settings"
									 Height="350"
									 Width="430"
									 ResizeMode="CanMinimize"
									 Style="{StaticResource WindowStyle}"
									 WindowStartupLocation="CenterScreen"
									 telerikNavigation:RadWindowInteropHelper.ShowInTaskbar="True"
									 telerik:StyleManager.Theme="Fluent">
	<telerik:RadWindow.Resources>
		<Style x:Key="OverlayStyle" 
           TargetType="Rectangle">
			<Setter Property="Stroke" 
              Value="#FFDA8282" />
			<Setter Property="Fill">
				<Setter.Value>
					<LinearGradientBrush EndPoint="0.5,1" 
                               MappingMode="RelativeToBoundingBox" 
                               StartPoint="0.5,0">
						<GradientStop Color="#FF6BBDD2"
                          Offset="0" />
						<GradientStop Color="#FFD2CC34"
                          Offset="0.209" />
						<GradientStop Color="#FFC2CE8E"
                          Offset="0.512" />
						<GradientStop Color="#FF86C0CE"
                          Offset="0.897" />
						<GradientStop Color="#E52822"
                          Offset="0" />
					</LinearGradientBrush>
				</Setter.Value>
			</Setter>
			<Setter Property="Opacity" 
              Value="0.9" />
		</Style>
	</telerik:RadWindow.Resources>
	<telerik:RadWindow.Icon>
		<Image Source="../Data/AMADIcon" Width="24" Margin="5" />
	</telerik:RadWindow.Icon>
	<telerik:RadBusyIndicator BusyContent="Saving please wait..."
														Name="busyIndicator"
														OverlayStyle="{StaticResource OverlayStyle}">
		<Grid gh:GridHelper.GridRows="*,auto">
			<Grid gh:GridHelper.GridCols="auto,*"
						gh:GridHelper.GridRows="auto,auto,auto,auto,auto,auto,auto,auto,auto,auto"
						Grid.Row="0"
						Margin="20, 20, 20, 0">

				<CheckBox Content="Start on system startup"
									Grid.Column="0"
									Grid.Row="0"
									Foreground="#fff"
									Margin="0, 0, 5, 15"
									Name="startup" />

				<TextBlock Grid.Column="0"
									 Grid.Row="1"
									 Margin="5, 0, 0, 15"
									 VerticalAlignment="Center"
									 Text="When to show the time reminder:" />
				<telerik:RadTimePicker Grid.Column="1"
															 Grid.Row="1"
															 Margin="0, 0, 0, 15"
															 HorizontalAlignment="Right"
															 Width="150"/>

				<Separator Grid.ColumnSpan="2"
									 Grid.Row="2"
									 Margin="0, 0, 0, 8"/>

				<TextBlock Grid.ColumnSpan="2"
									 Grid.Row="3"
									 HorizontalAlignment="Center"
									 Margin="0, 0, 0, 10"
									 Text="The next Mishnah shown will be:"/>

				<TextBlock Grid.Column="0"
									 Grid.Row="4"
									 Margin="5, 0, 0, 15"
									 Text="Mesechtah: "/>
				<telerik:RadAutoCompleteBox Grid.Column="1"
																		Grid.Row="4"
																		Width="150"
																		HorizontalAlignment="Right"
																		Margin="0, 0, 0, 15"/>

				<TextBlock Grid.Column="0"
									 Grid.Row="5"
									 Margin="5, 0, 0, 15"
									 Text="Perek: "/>
				<telerik:RadAutoCompleteBox Grid.Column="1"
																		Grid.Row="5"
																		Width="150"
																		HorizontalAlignment="Right"
																		Margin="0, 0, 0, 15"/>

				<TextBlock Grid.Column="0"
									 Grid.Row="6"
									 Margin="5, 0, 0, 15"
									 Text="Mishnah: "/>
				<telerik:RadAutoCompleteBox Grid.Column="1"
																		Grid.Row="6"
																		Width="150"
																		HorizontalAlignment="Right"
																		Margin="0, 0, 0, 15"/>

				<telerik:RadWrapPanel Grid.ColumnSpan="2"
															Grid.Row="7"
															Margin="0, 0, -10, 0"
															VerticalAlignment="Center"
															HorizontalAlignment="Right">
					<Button Padding="3"
									MinWidth="70"
									Content="OK"
									Click="Save_Click"
									IsDefault="True"
									telerik:StyleManager.Theme="Fluent" />
					<Button Padding="3"
									Margin="10, 0"
									MinWidth="70"
									Content="Cancel"
									Click="Cancel_Click"
									telerik:StyleManager.Theme="Fluent"/>
				</telerik:RadWrapPanel>
			</Grid>

			<TextBlock Grid.Row="1"
								 Margin="5"
								 Text="© 2021 Version 1.0" />
		</Grid>
	</telerik:RadBusyIndicator>
</telerik:RadWindow>
